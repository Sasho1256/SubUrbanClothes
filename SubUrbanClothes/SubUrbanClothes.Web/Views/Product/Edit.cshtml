@model ProductViewModel
@{
	ViewData["Title"] = "Edit product";
}

<div class="text-center">
	<h1 class="display-4">Edit product</h1>

	<form asp-controller="Product" asp-action="Edit" method="post">
		<label>Name</label> <br>
		<input name="name" value="@Model.Name" required> <br>

		<label>Price</label> <br>
		<input type="number" min="0" name="price" value="@Model.Price" required> <br>

		<label>Brand</label> <br>
		<input name="brand" value="@Model.Brand" required> <br>
		
		<label>Color</label> <br>
		<input name="color" value="@Model.Color" required> <br>

		<label>Size</label> <br>
		<input name="size" value="@Model.Size" required> <br>

		<input name="productId" value="@Model" hidden>

		<br><br>

		<button>Save changes</button>
	</form>
</div>