@model ProductViewModel
@{
    ViewData["Title"] = "Update";
}
@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), "administrator"))
{
    <div style="margin:auto; background-color: white; padding: 10px; border-radius: 20px; margin-top:6em; width: 17em; text-align:center">
        <h1>@ViewData["Title"]</h1>

        <form asp-controller="Product" asp-action="Update" method="post">
            <label>Name</label> <br>
            <input name="Name" value="@Model.Name" required> <br>

            <label>Price</label> <br>
            <input type="number" step="0.01" min="0" name="Price" value="@Model.Price" required> <br>

            <label>Size</label><br>
            <input name="Size" value="@Model.Size" required> <br>

            <label>Product Type</label><br>
            <input name="ProductType" value="@Model.ProductType" required> <br>

            <label>Thumbnail URL</label><br>
            <input name="ThumbnailURL" value="@Model.ThumbnailURL" required> <br>


            <label>Brand</label> <br>
            <input name="Brand" value="@Model.Brand" required> <br>

            <label>Color</label> <br>
            <input name="Color" value="@Model.Color" required> <br>

            <label>Category</label> <br>
            <input name="Category" value="@Model.Category" required> <br>

            <label>Gender</label> <br>
            <select name="Gender" id="Gender" required>
                <option value="Men" selected>Men</option>
                <option value="Women">Women</option>
                <option value="Children">Children</option>
            </select>

            <input name="ProductId" value="@Model.ProductId" hidden />

            <br>
            <br>
            <input type="submit" value="Update" class="btn btn-lg" style="background-color: #2286d8; color: white">
        </form>
    </div>
}