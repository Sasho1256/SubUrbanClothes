@model Product
@{
    if (Model != null)
    {
        ViewData["Title"] = Model.Name;
    }
    else
    {
        ViewData["Title"] = "Product";
    }
}
<head>
    <link rel="stylesheet" href="~/css/product.css" asp-append-version="true" />
</head>

<body>
    <div id="allDiv">
        @{
            if (Model != null)
            {
                <img src="@Model.ThumbnailURL" />
                <div id="metadata">
                    <h3>@Model.Name</h3>
                    <p>
                        Brand: @Model.Brand.Brand_Name<br>
                        Color: @Model.Color.Color_Name<br>
                        Gender: @Model.Gender.Gender_Name<br>
                        Price: @Model.Price<br>
                        Size: @Model.Size
                    </p>
                </div>
                <div>

                    <a id="btn_add" href="@Url.Action("AddToCart", "Cart", @Model)" class="btn btn-info btn-lg" style="margin-left:60px">
                        <span class="glyphicon glyphicon-shopping-cart"></span> Add To Cart
                    </a>

                    <a id="btn_add" href="@Url.Action("Index", "Home")" class="btn btn-info btn-lg" style="margin-left:60px">
                        <span class="glyphicon glyphicon-eye-open"></span> Continue shopping
                    </a>
                    <br />
                    <br />

                </div>
            }
            else
            {
                <h2>Product not found</h2>
            }
        }
    </div>
</body>
