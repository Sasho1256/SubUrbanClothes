@using Stripe
@model List<Charge>


<div style="padding:20px; border-radius:15px; background-color: white; margin-top: 6em">
@foreach(var charge in Model) {
    <h1>[@charge.Created] - @("**** **** **** " + charge.PaymentMethodDetails.Card.Last4) - @(string.Format("{0:F2}$", (charge.Amount / 100.0M)))</h1>
}
</div>