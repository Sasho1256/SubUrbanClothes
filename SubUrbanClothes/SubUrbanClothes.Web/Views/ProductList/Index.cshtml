@model List<Product>
@{
    ViewData["Title"] = "Products";
}
<head>
    <link rel="stylesheet" href="~/css/productList.css" asp-append-version="true" />
</head>

<!-- Control buttons -->
<div id="myBtnContainer" class="sidenav">
    <button class="btn active" onclick="filterSelection('all')"> Show all</button>
    @{
        if (Model != null)
        {
            var products = Model;
            for (int i = 0; i < Model.Count; i++)
            {
                <br>
                <button class="btn" onclick="filterSelection('@products[i].Gender.Name')"> @products[i].Gender.Name</button>
            }
            for (int i = 0; i < products.Count; i++)
            {
                <br>
                <button class="btn" onclick="filterSelection('@products[i].Brand.Name')"> @products[i].ProductType</button>
            }
            for (int i = 0; i < products.Count; i++)
            {
                <br>
                <button class="btn" onclick="filterSelection('@products[i].Category.Name')"> @products[i].Category.Name</button>
            }
            for (int i = 0; i < products.Count; i++)
            {
                <br>
                <button class="btn" onclick="filterSelection('@products[i].Brand.Name')"> @products[i].Brand.Name</button>
            }
        }
    }

</div>

<!-- The filterable elements. Note that some have multiple class names (this can be used if they belong to multiple categories) -->
<div class="myContainer">
    @{
        if (Model != null)
        {
            var products = Model;
            for (int i = 0; i < products.Count; i++)
            {
                <div class="filterDiv @products[i].Gender.Name @products[i].ProductType @products[i].Category.Name @products[i].Color.Name @products[i].Brand.Name">@products[i].Name</div>
            }
        }
    }
</div>

<script src="~/js/productList.js" asp-append-version="true"></script>